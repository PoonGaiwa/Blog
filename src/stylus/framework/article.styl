.blog-article-wrap
  border 1px solid bg-body-color
  border-radius 4px
  box-shadow 0 0 1px border-main-color inset
  background-color bg-main-color

.blog-article
  margin margin-space
  padding 0 padding-space * 3
  h1,h2,h3,h4,h5,h6
    margin 0
    padding 0
    font-weight 700

.blog-article--head
  margin-bottom 

.blog-article--title
  margin 0
  padding 0

.blog-article--author
  color theme-color

.blog-article--info
  display column
  padding padding-space padding-space * 2
  margin 0 margin-space
  background-color bg-body-color
  
  &>div
    padding 0

.blog-article--content
  padding padding-space * 3 padding-space
  img
    left 0
    right 0
    margin margin-space * 2 auto
    display block
    width 50%
    height auto

.blog-info--basic
  text-align left
  font-size 14px
  span
    &:not(:last-of-type)
      padding-right padding-space

.blog-article--tags
  text-align right
  span
    color font-writeplace-color
    &::before
      padding-right padding-space * .5
    &:not(:last-of-type)
      padding-right padding-space * 4

.blog-article--date
  margin-top margin-space * 2
  color font-writeplace-color
  font-size 14px
  text-align center