.blog-write--scroll
  position relative

#editor-container
  h1,h2,h3,h4,h5,h6
    font-weight 700
  &>.w-e-text-container
    position relative !important
    height 60vh !important

.blog-write--title
  margin margin-space * 2 0

.blog-input--write
  padding padding-space
  width 100%
  font-size 32px
  font-weight 700
  text-align center
  border 0
  border-bottom 1px solid theme-color
  &:focus
    outline none
  &::placeholder
    color font-writeplaceh-color

.placeholder
  color font-writeplaceh-color !important

.blog-write--control
  display flex
  justify-content flex-end
  align-content center
  padding padding-space
  border-top 1px solid #ccc
  & a
    padding padding-space * .5 padding-space *2
    border 1px solid #ccc
    border-radius 4px
    box-shadow 0 0 1px #333
    &:not(first-child)
      margin-left margin-space * 2
    &:hover
      color lighten(font-common-color, 40%)
