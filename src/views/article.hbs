<div class="blog-article-wrap">
  <article class="blog-article typo" id="router-view">
    <div class="blog-article--head">
      <h1 class="blog-article--title">{{title}}</h1>
      <div class="blog-article--info row">
        <div class="blog-info--basic col-lg-6 col-md-6">
          {{#if author.nickname}}
          <div>来自作者：<span class="blog-article--author">{{author.nickname}}</span></div>
          {{/if}}
        </div>
        <div class="blog-article--tags d-none d-lg-block col-lg-6 col-md-6">
          <span class="blog-article--like iconfont icon-browse">{{hits_num}}</span>
          <span class="blog-article--like iconfont icon-like">{{like_num}}</span>
          <span class="blog-article--comment iconfont icon-comment">{{comment_num}}</span>
        </div>
      </div>
      {{#if date}}
      <div class="blog-article--date">文章发表：<span>{{date}}</span></div>
      {{/if}}
    </div>
    <div class="blog-article--content">{{{content}}}</div>
  </article>
</div>
{{>comment}}
