@import "./_variables.styl"
/*base start*/
* 
  margin 0
  padding 0

html
  font-family Arial, Helvetica, sans-serif, 'Microsoft yahei'
  font-size font-size-h

h1
  margin-top 0
  margin-bottom 0
  padding-top 0
  padding-bottom 0

ul
  list-style none

a
  text-decoration none
  color font-common-color

a:hover
  color font-hover-color

::placeholder
  font-size font-size-h
  color font-hover-color

.flex
  display flex

.flex-column
  flex-direction column

/*base end*/