.blog-modal
  display grid
  position fixed
  z-index 888
  top 0
  left 0 
  bottom 0
  right 0
  margin auto
  background-color rgba(0,0,0,.3)

.blog-modal--wrap
  justify-self center
  align-self center
  width 50%
  padding padding-space * 2
  box-shadow 0 0 4px border-modal-color inset
  border-radius border-radius-default
  background-color bg-modal-color

.blog-modal--head
  display flex
  justify-content space-between
  align-items center
  padding padding-space

.blog-modal--title
  color font-common-color
  font-size font-size-h * 2

.blog-modal--close
  font-size font-size-h

.col-form-label
  color font-modal-color

.blog-footer--confirm
  border 1px solid lighten(border-modal-color, 60%)
  color font-modal-color

.blog-content--username,
.blog-content--pwd
  position relative
  padding-bottom padding-space * 3
  &::after
    content attr(data-msg)
    position absolute
    top 78px
    left 8px
    font-size 14px
    color red