.blog-columns
  min-height 480px

.blog-column--item
  display flex
  flex-direction column
  justify-content center
  align-items center
  min-height 100px
  min-width 100px
  background-color bg-column-color1
  box-shadow 0 0 4px 1px #999 inset
  transition .3s
  &:hover
    z-index 1
    transform scale(1.1)
  p
    padding padding-space
    font-size: 14px
    color font-common-color
    line-height 2
  &:nth-of-type(2n)
    background-color bg-column-color3
  &:nth-of-type(3n)
    background-color bg-column-color4

for num in 2 4 6 8 1
  .item-{num}
    width num * 2vw
    height num * 2vw

.blog-column--add::after
  content '+'
  font-size 3em

