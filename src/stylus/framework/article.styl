.blog-article
  min-height 500px
  padding 0 padding-space * 2
  h1,h2,h3,h4,h5,h6
    margin 0
    padding 0
    font-weight 700

.blog-article--info
  display flex
  justify-content space-between
  align-items center
  padding-bottom padding-space
  margin-bottom margin-space * 2
  border-bottom 2px solid theme-color

.blog-info--basic
  text-align center
  span
    &:not(:last-of-type)
      padding-right padding-space

.blog-article--tags
  span
    &:not(:last-of-type)
      padding-right padding-space
