@import "./_variables.styl"

.blog-main
  margin-top margin-space * 6

.blog-slide-wrap
  margin-right margin-space * 10
  padding (padding-space * 6) 0
  box-shadow 0 0 2px border-main-color
  border-radius border-radius-default * 1.5
  background-color bg-article-color

.blog-avatar
  overflow hidden
  text-align center
  height 140px
  img
    width 140px
    height auto
    border-radius 50%
    user-select none

.blog-info
  display flex
  flex-direction column
  align-items center
  .blog-info--nickname
    padding padding-space * 2 0
  .blog-info--state
    display flex
    justify-content center
    user-select none
    span
      display block
      text-align center
      cursor pointer
    a
      &:hover
        color font-article-color
      &:not(:nth-of-type(1))
        margin-left margin-space
        padding-left padding-space
        border-left 1px solid font-common-color
  .blog-info--desc
    margin-top margin-space * 3